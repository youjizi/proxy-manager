{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Proxy Manager",
  "version": "0.1.0",
  "identifier": "com.tauri-app.proxy-manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Proxy Manager",
        "width": 880,
        "height": 720,
        "minWidth": 860,
        "minHeight": 680,
        "center": true,
        "visible": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
